<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.thebest.sistemakademik">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".RiwayatPresensiActivity"
            android:parentActivityName=".TahunActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".TahunActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".NilaiActivity"
            android:parentActivityName=".KelasActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".KelasActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".NilaiPTSActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".ProfilActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".NilaiPASActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".PresensiActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".BeritaActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/SubAppTheme" />
        <activity
            android:name=".DashboardActivity"
            android:launchMode="singleTask" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>